<h1>Public::Customers#edit</h1>
<p>Find me in app/views/public/customers/edit.html.erb</p>
<!------------------------------------------------------------------------------>
<div class="container">
  <div class="row">
    <div class="col-3">
      <%= render "public/shared/genre" %>
    </div>
    <div class="col-6">
      <div class="row">
        <h3>会員情報編集</h3>
      </div>
      <%= form_with model: @customer do |f| %>
        <% render "public/shared/error_messages", resource: @customer %>
        <table class="table-bordered mb-3">
          <tr>
            <th bgcolor="#99CC99">氏名</th>
            <td style="width: 450px;">
              <%= f.text_field :last_name, autofocus: true, autocomplete: "last_name", placeholder: "山田" %>
              <%= f.text_field :first_name, autofocus: true, autocomplete: "first_name", placeholder: "太郎" %>
            </td>
          </tr>
          <tr>
            <th bgcolor="#99CC99">カナ</th>
            <td>
              <%= f.text_field :last_name_kana, autofocus: true, autocomplete: "last_name_kana", placeholder: "ヤマダ" %>
              <%= f.text_field :first_name_kana, autofocus: true, autocomplete: "first_name_kana", placeholder: "タロウ" %>
            </td>
          </tr>
          <tr>
            <th bgcolor="#99CC99">メールアドレス</th>
            <td><%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %></td>
          </tr>
          <tr>
            <th bgcolor="#99CC99">郵便番号</th>
            <td><%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0001234" %></td>
          </tr>
          <tr>
            <th bgcolor="#99CC99">住所</th>
            <td><%= f.text_field :address, autofocus: true, autocomplete: "address", size: 60, placeholder: "東京都港区赤坂2-11-7 WEBCAMPマンション201号室" %></td>
          </tr>
          <tr>
            <th bgcolor="#99CC99">電話番号</th>
            <td><%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number", placeholder: "08012345678" %></td>
          </tr>
        </table>
        <div class="row mb-3 justify-content-around">
          <div class="col-2">
            <%= f.submit "編集内容を保存", class: "btn btn-success px-3" %>
          </div>
        </div>
      <% end %>
    </div>
    <div class="col-3"><!--部分レンプレート化したカート内アイテム一覧-->
      <%= render "public/shared/cart_item" %>
    </div>
  </div>
</div>