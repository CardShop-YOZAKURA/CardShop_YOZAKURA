<div class="container">
  <div class="row mb-3">
    <h3>新規会員登録</h3>
  </div>
  <!--<div class="row mb-3 bg-body-secondary">-->
  <!--  <div class="col-4">-->
  <!--    STEP1<br>-->
  <!--    お客様情報の入力-->
