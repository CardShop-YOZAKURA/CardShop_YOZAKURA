<div class="container">
  <div class="row">
    <div class="col-9 offset-1">
      <div class="row">
        <h3>商品一覧</h3>
        <div class="row">
          <%# @items.each do |item| %>
            <div class="col-md-3 d-flex flex-wrap">
              <%#= link_to item_path(item.id) do %>
                <%#= image_tag item.get_image(200, 200) %>
              <%# end %>
              <%#= item.name %>
              <%#= item.price %>
            </div>
        <%# end %>
      </div>

    </div>
  </div>
</div>

