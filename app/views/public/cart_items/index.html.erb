<h1>Public::CartItems#index</h1>
<p>Find me in app/views/public/cart_items/index.html.erb</p>

<div class="container">
  <div class="row">
    <strong class="infomation-link">
      <h4>ショッピングカート</h4>
    </strong>

  <%= link_to "カートを空にする", destroy_all_cart_items_path, method: :delete, class: "btn btn-danger btn-sm pull-right", "data-confirm" => "空にしますか？" %>

<table>
  <tr>
    <th>商品名</th>
    <th>単価(税込)</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  <% total = 0 %>

  <% @cart_items.each do |cart_item| %> 
    <tr>
      <td>
        <%= image_tag cart_item.item.get_image(100, 100) %>
        <%= cart_item.item.name %>
      </td>
      <td><%= cart_item.item.price_including_tax.to_i %></td>　<!-- 商品単価(価格×1.08) -->
      <td>
        <%= form_with model: cart_item, url: cart_item_path(cart_item), local: true, method: :patch do |f| %>
          <%= f.number_field :amount, min: 1, max: 100, class: "amount_cart"%>
          <%= f.submit "変更", class: "btn btn-primary" %> 
        <% end %>
      </td>
      <td>
        <%= cart_item.subtotal.to_i %>　<!--小計を計算する-->
      </td>
      <td>
        <%= link_to "削除する", cart_item_path(cart_item.id, cart_item), method: :delete, class: "btn btn-danger", "data-confirm" => "削除しますか？" %>
      </td>
    </tr>
    <!--アイテムごとに合計金額totalに反映 計算しておく-->
    <% total += cart_item.subtotal %>　
  <% end %>
 
  <tr>
    <td><%= link_to "買い物を続ける", items_path, class: "btn btn-primary" %></td>    
    <th>合計金額</th>
    <td><%= total %></td>
  </tr>
</table>

<%= link_to "情報入力へ進む", new_order_path, class: "btn btn-success" %>
 
  </div>
</div>

